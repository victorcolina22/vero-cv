---
// Components
import Card from "../../Card.astro";

// Icons
import BiceVida from "@/icons/BiceVida.astro";
---

<section
  class="2xl:max-w-7xl w-3/4 mx-auto flex flex-col gap-10 mt-52 reveal-right-animation"
>
  <div class="text-end">
    <h3 class="text-orange xl:text-[128px] text-[50px] font-caveat-bush">
      ¿Qué dicen de mi?

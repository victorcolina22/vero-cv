---
import HorizontalScrolling from "@/components/HorizontalScrolling.astro";
import Oval from "@/icons/Oval.astro";
---

<section
  id="hero"
  class="bg-gray pt-52 flex flex-col justify-center h-screen hero transition-colors"
>
  <h1
    class="text-white-text text-[100px] md:text-[130px] xl:text-[180px] font-grafie text-center leading-[120px] lg:leading-normal"
  >
    Vero Mendoza
  </h1>
  <div class="grid grid-cols-1 grid-rows-1 place-items-center">
    <Oval class="row-start-1 col-start-1" />
    <span class="row-start-1 col-start-1 text-[32px] text-white-text"
      >UX/UI Designer</span
    >
  </div>
  <div
    class="flex flex-col justify-center items-center 2xl:max-w-7xl gap-3 xl:mx-auto mt-16"
  >
    <p class="text-white-text xl:text-xl text-sm">Quienes han confiado en mi</p>
    <HorizontalScrolling />
  </div>
</section>

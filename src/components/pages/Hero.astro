---
import Layout from "../../layouts/Layout.astro";
import HorizontalScrolling from "../HorizontalScrolling.astro";

// Icons
import SunIcon from "../icons/SunIcon.astro";
---

<Layout title="Vero Mendoza">
  <section class="bg-peach pt-[370px]">
    <div
      class="grid grid-cols-1 grid-rows-[100px_280px_1fr] 2xl:max-w-7xl mx-auto"
    >
      <article
        class="grid grid-cols-1 grid-rows-1 items-center justify-items-center -mt-16"
      >
        <SunIcon class="col-start-1 row-start-1 w-[50rem] bg-[#FEF1EE]" />
        <img
          class="object-cover col-start-1 row-start-1 -mt-40 -ml-8 w-[30rem]"
          src="./images/yo.webp"
          alt="yo"
        />
      </article>

      <div class="2xl:max-w-7xl mx-auto z-30">
        <h2 class="text-[128px] text-orange font-caveat-bush">
          Dise√±o simple y humano
        </h2>
        <p class="font-lato text-blue-deep text-[26px] -mt-10 ml-4">
          Veronica Mendoza, Product Designer
        </p>
      </div>

      <div class="flex flex-col 2xl:max-w-7xl gap-5 mx-auto">
        <p class="text-blue-deep text-xl text-center">
          Quienes han confiado en mi
        </p>
        <HorizontalScrolling />
      </div>
    </div>
  </section>
</Layout>

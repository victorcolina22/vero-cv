---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Artista plástica con especialización en diseño gráfico egresada de la Universidad Arturo Michelena. Diplomada en diseño de experiencia de usuario e interfaces digitales."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="name" content="Verónica Mendoza" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Caveat+Brush&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap");

  * {
    /* Include padding and border in size calculation */
    box-sizing: border-box;
    /* Position based on immediate parent and allow adjusting top/right/bottom/left */
    position: relative;
    /* Prevent grid and flex items from spilling out their container */
    min-width: 0;
  }

  /* Ensure that the boyd fills the entire viewport */
  body {
    min-height: 100dvh;
    overscroll-behavior: none;
  }

  /* Balance headings across multiple lines into an even block */
  h1,
  h2,
  h3,
  h4 {
    text-wrap: balance;
  }

  /* Prevent text orphans (single words on last line) */
  p {
    text-wrap: pretty;
  }
</style>

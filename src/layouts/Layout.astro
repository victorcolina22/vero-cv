---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    /* Include padding and border in size calculation */
    box-sizing: border-box;
    /* Position based on immediate parent and allow adjusting top/right/bottom/left */
    position: relative;
    /* Prevent grid and flex items from spilling out their container */
    min-width: 0;
  }

  /* Ensure that the boyd fills the entire viewport */
  body {
    min-height: 100dvh;
  }

  /* Balance headings across multiple lines into an even block */
  h1,
  h2,
  h3,
  h4 {
    text-wrap: balance;
  }

  /* Prevent text orphans (single words on last line) */
  p {
    text-wrap: pretty;
  }
</style>
